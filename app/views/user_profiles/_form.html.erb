<%= simple_form_for(@user_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :avatar %>
    <%= f.input :homepage %>
    <%= f.input :location %>
    <%= f.input :gender %>
    <%= f.input :birthday %>
    <%= f.input :description %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
