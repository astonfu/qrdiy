<%= simple_form_for(@project) do |f| %>
  <%= render "shared/error_messages", target: @project %>

  <div class="form-inputs">
    <%= f.input :name, label: "一个名字", placeholder: "好记的名字" %>
    <%= f.input :desc, label: "一句描述", placeholder: "简短的介绍" %>
    <%= f.input :description, label: "详细描述", :input_html => {rows: 10, placeholder: "还在思考中..."} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
