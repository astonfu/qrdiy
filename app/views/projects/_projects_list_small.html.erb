<% if projects %>
  <ul class="unstyled projects-list-tiny media-list">
    <% projects.each do |project| %>
      <li class="media mover">
        <%= link_to image_tag(project.avatar.small.url.to_s, class: "avatar small"), project_path(project), class: "media-left" %>
        <div class="media-body">
          <div class="media-heading">
            <%= link_to project.name, project_path(project) %>
          </div>
          <%= project.desc %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
