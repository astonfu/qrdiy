<%= render partial: "statuses/status", collection: @statuses, locals: { is_show_project_name: true } %>

<%= will_paginate @statuses %>

<% content_for "secondary-content" do %>
  <% if !current_user %>
    <div class="sign-in">
      <%= form_for(:user, :url => session_path(:user)) do |f| %>
        <%= f.text_field :email %>
        <%= f.password_field :password %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <%= render "shared/captcha" %>
        <%= f.submit t('devise.shared.links.sign_in') %>
        <%= link_to t("devise.shared.links.forgot_your_password"), new_password_path(:user) %>
      <% end %>
    </div>
  <% end %>

  <div class="section">
    <h2>DIY</h2>
    <%= render "projects/projects_list_small", projects: @projects %>
  </div>
<% end %>
