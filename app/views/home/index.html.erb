<%= render partial: "statuses/status", collection: @statuses %>

<%= will_paginate @statuses %>

<% content_for "secondary-content" do %>
  <% if !current_user %>
    <div class="sign-in">
      <%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
        <%= f.input :email, label: false, placeholder: "请输入邮箱" %>
        <%= f.input :password, label: false, placeholder: "请输入密码" %>
        <%= render "shared/captcha" %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label "记住我" %>
        </div>
        <%= f.button :submit, t('devise.shared.links.sign_in'), class: "btn btn-success" %>
        <%= link_to t("devise.shared.links.forgot_your_password"), new_password_path(:user) %>
      <% end %>
    </div>
  <% end %>

  <div class="section">
    <h2>DIY</h2>
    <%= render "projects/projects_list_small", projects: @projects %>
  </div>
<% end %>
