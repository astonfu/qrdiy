<div class="white">
  <div class="container">
    <nav class="navbar navbar-light bg-faded">
      <a class="navbar-brand" href="/">趣人DIY</a>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">首页</a>
        </li>
        <li class="nav-item">
          <% if user_signed_in? %>
            <%= link_to "我的趣人", user_path(current_user), class: "nav-link" %>
          <% else %>
            <a class="nav-link" href="/">我的趣人</a>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "浏览发现", projects_path, class: "nav-link" %>
        </li>
        <!-- <li class="nav-item">
          <a class="nav-link" href="/">移动应用</a>
        </li> -->
        <li class="nav-item">
          <%= link_to "创建DIY", new_project_path, class: "nav-link" %>
        </li>

        <div class="nav-login">
          <% if user_signed_in? %>
            <li class="nav-item notification-count">
              <% notification_count = Notification.unread_count(current_user) %>
              <%= link_to notifications_path, class: "nav-link#{' new' if notification_count > 0}" do %>
                <%= fa_icon("bell") %>
                <span class="count"><%= notification_count %></span>
              <% end %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="/" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= image_tag(current_user.profile.avatar.tiny.url.to_s, class: "avatar tiny") %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to fa_icon("user", text: "我的主页"), user_path(current_user), class:"dropdown-item" %>
                <% link_to fa_icon("envelope", text: "私信"), "/", class:"dropdown-item" %>
                <%= link_to fa_icon("cog", text: "设置"), edit_user_profile_path(current_user), class:"dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to fa_icon("sign-out", text: "退出"), destroy_user_session_path, class:"dropdown-item", method: "delete" %>
              </div>
              </div>
            </li>

          <% else %>
            <div id="login-join" style="display: block;">
              <li class="nav-item">
                <%= link_to "注 册", new_user_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "登 录", new_user_session_path, class: "first" %>
              </li>
            </div>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
  <div class="nav-bottom-line"></div>
</div>
