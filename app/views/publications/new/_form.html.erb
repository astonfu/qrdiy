<div class="project-reply clearfix" data-project-id="<%= project.id  %>">
  <%= form_tag(publications_path, multipart: true) do %>
    <%= hidden_field_tag(:publishable_type, "idea") %>
    <%= hidden_field_tag(:project_id, project.try(:id)) %>

    <%= render "publications/new/actions" %>

    <div id="input-content">
      <%= render "publications/new/idea" %>
    </div>

    <div class="pull-right">
      <%= submit_tag("发布", class: "btn btn-outline-primary btn-sm") %>
    </div>
  <% end %>
</div>
