<% user ||= comment.user %>
<li id="comment-<%= comment.id %>" name="comment-<%= comment.id %>">
  <%= avatar_tag user, :tiny %>
  <%= link_to user.name, user %>:
  <%= comment.content_html %>
  <% if policy(comment).destroy? %>
    <%= link_to ">删除", comment, class: "delete", remote: true, method: "delete", data:{ confirm: t("confirm.delete") } %>
  <% end %>
</li>
