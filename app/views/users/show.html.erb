<div class="user-homepage">
  <%= render partial: "statuses/status", collection: @user.all_statuses, locals: { is_show_project_name: true } %>
</div>

<% content_for "secondary-content" do %>
  <div class="user-homepage">

    <div class="section">
      <h1><%= @user_profile.name %></h1>
      <div class="avatar">
        <%= image_tag @user_profile.avatar.url %>
      </div>

      <%= relation_for @user, action_type: :follow, submit_name: "关注" %>

      <%= @user_profile.description %>
    </div>

    <div class="section">
      <h2>我的DIY</h2>
      <%= render "projects/projects_list_tiny", projects: @user.projects %>
    </div>

    <div class="section">
      <h2>我的关注</h2>
    </div>
  </div>
<% end %>
