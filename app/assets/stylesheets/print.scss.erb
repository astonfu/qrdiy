.print-show {
  
  .content {
    height:462px;
    width:330px;
    box-shadow: -10px 10px 5px #888888;
    // margin-left: 70px;
    background:#fff;
    border:1px solid #fff;

    .title {
      margin-top:55px;
      font-size:21px;
      padding: 10px;
      overflow: hidden;
      text-overflow: ellipsis;
      text-align: center;
      color:#333;
    }

    .tip-img {
      height:34px;
      margin-top:32px;
      text-align:center;
      align:center;
    }

    .description {
      text-align:center;
      max-width:180px;
      margin:0 auto;
      margin-top:22px;
      font-size:12px;
      color:#999;
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .qr {
      align: center;
      margin: 10px;
      height: 200px;
      width: 200px;
    }
  }

}
