.print-show {
  height: 486px;
  width: 360px;
  background:#fff;
  background: url(<%= asset_path('print_bg_v.png') %>) no-repeat;
  background-position-x: 52px;
  background-position-y: 0px;
  background-size: 90%;

  .content {
    height:462px;
    width:330px;
    margin-left: 70px;
    background:#fff;
    border:1px solid #fff;

    .title {
      margin-top:55px;
      font-size:21px;
      text-align:center;
      color:#333;
    }

    .tip-img {
      height:34px;
      margin-top:32px;
      text-align:center;
      align:center;
    }

    .desc {
      text-align:center;
      color:#999;
      max-width:180px;
      margin:0 auto;
      margin-top:22px;
      font-size:12px;
      color:#333;

      span {
        color:#999
      }
    }

    .qr {
      align: center;
    }
  }

}
